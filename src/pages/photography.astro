---
import BaseLayout from '@/layouts/BaseLayout.astro'
import PhotoGallery from '@/components/photography/photo-gallery.vue'

const title = 'Photography'
const description =
  'Browse my photos by album or All Photos. Progressive loading keeps things fast and smooth.'
---

<BaseLayout title={title} description={description}>
  <Fragment slot="head">
    <link rel="preconnect" href="https://www.googleapis.com" crossorigin />
    <link
      rel="preconnect"
      href="https://lh3.googleusercontent.com"
      crossorigin
    />
    <link rel="preconnect" href="https://drive.google.com" crossorigin />
    <link rel="preconnect" href="https://picsum.photos" crossorigin />
    <link rel="dns-prefetch" href="//www.googleapis.com" />
    <link rel="dns-prefetch" href="//lh3.googleusercontent.com" />
    <link rel="dns-prefetch" href="//drive.google.com" />
    <link rel="dns-prefetch" href="//picsum.photos" />
  </Fragment>
  <PhotoGallery client:visible />
</BaseLayout>
